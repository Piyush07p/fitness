                              <%if(name=="admin"){%> 
                                <a href="/admin/dashboard"><%=name%></a>
                             <%}else{%>
                                <%=name%>
                             <%}%>
                            </span>
                            <a href="/userAuth/logout" ><button class="signupBtn bg-[#FD643D] rounded margin:0rem 1rem">Logout</button></a>
                        <%}else{%>
                        <a href="/userAuth/login"><button class="signupBtn bg-[#FD643D] mx-2 rounded">Login</button></a>
