<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fit Bucket</title>
    <!-- <link rel="stylesheet" href="css/home.css"> -->
    <link rel="stylesheet" href="css/blogs.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
</head>

<body>

    <%- include('header')%>

        <!-- -----------------------(end of navbar)---------------------------- -->

        <main class="mainBlog">
            <div class="mainDiv">
                <div style="display:flex; justify-content: space-between ; align-items: center;">
                    <div>
                        <h3>Welcome <span style="color: red;">
                                <%=message%>
                            </span>, you can read fitness blog here..</h3>
                        <h1>Blogs</h1>
                    </div>
                    <button style="width: 7rem;" class="signupBtn">
                        <a style="color: #fff; text-decoration: none;" href="/createBlog">Create Blog</a>
                    </button>
                </div>
                <section class="articleSection">
                    <% data.reverse().forEach((elem,index)=>{%>
                        <article id=blog1>
                            <div class="card">
                                <div class="card-content">
                                    <h2>
                                        <%=index+1%>) <%=elem.title%>
                                    </h2>
                                    <p style="line-height: 0;">
                                        Author: <%=elem.author%>
                                    </p>
                                    <p class="blogHeadline">
      <%=elem.blogData%>
                                    </p>
                                    <div class="status">
                                        <p style="font-size: 0.7rem;"> <span style="color:#FD643D;">Posted on:</span>
                                 <%=elem.createdTime%>
                                        </p>
                                        <form action="/blogpage/posts/<%=elem._id%>" method="POST">
                                            <button class="read-btn">Full Read</button>
                                        </form>
                                    </div>
                                </div>
                                <img src="https://images.unsplash.com/photo-1517836357463-d25dfeac3438?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8Z3ltfGVufDB8fDB8fHww&auto=format&fit=crop&w=600&q=60"
                                    alt="blog1 image" id=img1>
                            </div>
                        </article>
                        <%})%>
                </section>

                <div class="centerloadMoreBtn">
                    <button class="loadMoreBtn" onclick="loadMore()">Load More</button>
                </div>

            </div>


            <!-- <section class="commentSection">
            <div class="commentBox">
                <p>Leave a Comment</p>
                    <form class="commentForm">
                        <input type="text" placeholder="Name">
                        <input type="email" placeholder="Email">
                        <textarea placeholder="Type your comment here..." rows="10"></textarea>
                        <button type="submit">Comment</button>
                    </form>
            </div>
        </section> -->
        </main>

        <!-- -----------(footer)---------- -->
        <%- include('footer')%>

            <script src="./js/home.js"></script>
            <script src="./js/blogs.js"></script>

</body>

</html>